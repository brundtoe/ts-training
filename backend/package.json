{
  "name": "tsprototype",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node dist/bin/www.js",
    "build-node": "rm -rf ./dist && npx tsc --build src/tsconfig.json ",
    "build-client": "rm -rf ./public/dist && npx tsc --build src_client/tsconfig.json",
    "build-all": "rm -rf ./dist public/dist && npx tsc --build tsconfig.json",
    "start-prod": "npx nodemon dist/bin/www.js",
    "start-dev": "NODE_ENV=development ts-node --project src/tsconfig.json ./src/bin/www.ts",
    "test": "jest"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "^2.6.9",
    "errorhandler": "^1.5.1",
    "express": "~4.16.1",
    "express-handlebars": "^5.1.0",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/debug": "^4.1.5",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.7",
    "@types/express-handlebars": "^3.1.0",
    "@types/hapi__joi": "^17.1.4",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.10",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "jest": "^26.4.0",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
